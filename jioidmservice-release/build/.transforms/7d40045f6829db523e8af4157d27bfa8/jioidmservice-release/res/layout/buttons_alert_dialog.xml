<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_bg"
        android:minWidth="350dp"
        android:orientation="vertical"
        android:padding="20dp"
        tools:ignore="MissingPrefix">

    <TextView
            android:id="@+id/dialog_tv_msg"
            fontPath="fonts/roboto_medium.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dialog_message_margin_Top"
            android:gravity="center"
            android:maxWidth="320dp"
            android:text="@string/confirmation_message"
            android:textColor="@color/white"
            android:textSize="18dp" />

    <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dialog_buttons_margin_top"
            android:layout_marginBottom="@dimen/dialog_buttons_margin_Bottom"
            android:gravity="center"
            android:orientation="horizontal"
            android:showDividers="middle">

        <TextView
                android:id="@+id/btn_positive"
                fontPath="fonts/roboto_medium.ttf"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/button_focus_selector_dialog"
                android:focusable="true"
                android:gravity="center_vertical|center_horizontal"
                android:maxLines="1"
                android:padding="@dimen/dialog_button_padding_6dp"
                android:text="@string/label_yes"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_16" />

        <TextView
                android:id="@+id/btn_negative"
                fontPath="fonts/roboto_medium.ttf"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/button_focus_selector_dialog"
                android:gravity="center_vertical|center_horizontal"
                android:maxLines="1"
                android:padding="@dimen/dialog_button_padding_6dp"
                android:text="@string/label_no"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_16" />

    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingPrefix">

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:orientation="vertical">

        <EditText
                android:id="@+id/user_id"
                fontPath="fonts/jiotype_medium.ttf"
                android:layout_width="@dimen/dp_300"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_x"
                android:layout_marginTop="@dimen/dp_22"
                android:layout_marginRight="@dimen/margin_x"
                android:gravity="left"
                android:hint="@string/userId"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:nextFocusLeft="@id/user_id"
                android:nextFocusRight="@id/user_id"
                android:nextFocusDown="@id/password"
                android:tag="email"
                android:textSize="@dimen/dp_10" />

        <EditText
                android:id="@+id/password"
                fontPath="fonts/jiotype_medium.ttf"
                android:layout_width="@dimen/dp_300"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_id"
                android:layout_marginLeft="@dimen/margin_x"
                android:layout_marginTop="@dimen/dp_22"
                android:layout_marginRight="@dimen/margin_x"
                android:gravity="left"
                android:hint="@string/password"
                android:imeOptions="actionNext"
                android:inputType="textNoSuggestions|textPassword"
                android:nextFocusLeft="@id/password"
                android:nextFocusRight="@id/password"
                android:nextFocusDown="@id/user_login"
                android:tag="email"
                android:textSize="@dimen/dp_10" />

        <TextView
                android:id="@+id/text_note"
                fontPath="fonts/jiolight.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/password"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_marginTop="@dimen/dp_25"
                android:layout_marginRight="@dimen/dp_6"
                android:gravity="center"
                android:text="@string/txt_use_id"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_10" />

        <Button
                android:id="@+id/user_login"
                fontPath="fonts/jiotype_medium.ttf"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_35"
                android:layout_below="@id/text_note"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_50"
                android:background="@drawable/login_button_focous"
                android:gravity="center"
                android:nextFocusLeft="@id/user_login"
                android:nextFocusRight="@id/user_login"
                android:nextFocusDown="@id/user_login"
                android:text="@string/signin"
                android:textSize="@dimen/dp_10" />

    </RelativeLayout>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp_12"
        android:background="@color/bg_color"
        tools:ignore="MissingPrefix">

    <TextView
            android:id="@+id/text_setup_jio_id"
            fontPath="fonts/jiotype_medium.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/dp_20"
            android:text="@string/setup_jioid"
            android:textSize="@dimen/dp_20"
            android:textStyle="bold" />

    <ImageView
            android:id="@+id/jiologo"
            android:layout_width="@dimen/_28sdp"
            android:layout_height="@dimen/dp_100"
            android:layout_below="@id/text_setup_jio_id"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/dp_6"
            android:src="@drawable/ic_jio_icon" />

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/jiologo"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_24">

        <LinearLayout
                android:id="@+id/qr_code_main_container"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/dp_30"
                android:orientation="vertical">

            <TextView
                    fontPath="fonts/jiotype_medium.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:text="@string/login_via_myjio"
                    android:textSize="@dimen/dp_14"
                    android:textStyle="bold" />

            <TextView
                    fontPath="fonts/jiolight.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_12"
                    android:gravity="center"
                    android:text="@string/open_myjio_app"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_14" />

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_18"
                    android:gravity="center">

                <TextView
                        android:layout_width="@dimen/qr_code"
                        android:layout_height="@dimen/qr_code"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="@dimen/dp_8"
                        android:background="@drawable/qr_code_bg"
                        android:gravity="center"
                        android:letterSpacing="1"
                        android:text="6789"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dp_14"
                        android:textStyle="bold" />

                <ImageView
                        android:layout_width="@dimen/qr_code"
                        android:layout_height="@dimen/qr_code"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="@dimen/dp_8"
                        android:src="@drawable/ic_qrcode" />
            </LinearLayout>

            <Button
                    android:id="@+id/login_btn_generate_qr_code"
                    fontPath="fonts/jiotype_medium.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_35"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_12"
                    android:background="@drawable/login_button_focous"
                    android:focusable="false"
                    android:gravity="center"
                    android:nextFocusRight="@id/edit_mobile_email_identifier"
                    android:text="@string/get_new_code"
                    android:textSize="@dimen/dp_10" />

        </LinearLayout>

        <LinearLayout
                android:id="@+id/dot_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="vertical">

            <LinearLayout
                    android:id="@+id/linear_line1"
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="@dimen/dp_100"
                    android:layout_marginLeft="14dp"
                    android:background="@color/black"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"></LinearLayout>

            <TextView
                    android:id="@+id/text_or"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:paddingLeft="@dimen/dp_2"
                    android:text="@string/or"
                    android:textSize="@dimen/dp_12" />

            <LinearLayout
                    android:id="@+id/linear_line2"
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="@dimen/dp_100"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="@dimen/dp_26"
                    android:background="@color/black"
                    android:orientation="vertical">

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/login_user_container"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_30"
                android:orientation="vertical">

            <TextView
                    fontPath="fonts/jiotype_medium.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:text="@string/using_jioid"
                    android:textSize="@dimen/dp_14"
                    android:textStyle="bold" />

            <LinearLayout
                    android:id="@+id/otp_login_container"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical">

                <EditText
                        android:id="@+id/edit_mobile_email_identifier"
                        fontPath="fonts/jiotype_medium.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_x"
                        android:layout_marginTop="@dimen/dp_26"
                        android:layout_marginRight="@dimen/margin_x"
                        android:focusable="true"
                        android:gravity="left"
                        android:hint="@string/email_address"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress"
                        android:nextFocusLeft="@id/edit_mobile_email_identifier"
                        android:nextFocusUp="@id/edit_mobile_email_identifier"
                        android:tag="email"
                        android:textSize="@dimen/dp_10"
                        android:textStyle="italic" />

                <TextView
                        android:id="@+id/btn_username_login"
                        fontPath="fonts/jiotype_medium.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_40"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_25"
                        android:background="@drawable/text_focus"
                        android:focusable="true"
                        android:gravity="center"
                        android:text="@string/user_password"
                        android:textSize="@dimen/dp_12"
                        android:textStyle="bold" />

                <TextView
                        fontPath="fonts/jiolight.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_6"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_6"
                        android:gravity="center"
                        android:text="@string/txt_use_rmn"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dp_10" />

                <Button
                        android:id="@+id/btn_login"
                        fontPath="fonts/jiotype_medium.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_35"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_35"
                        android:background="@drawable/login_button_focous"
                        android:focusable="true"
                        android:gravity="center"
                        android:nextFocusRight="@id/btn_login"
                        android:nextFocusDown="@id/btn_login"
                        android:text="@string/generateotp"
                        android:textSize="@dimen/dp_10" />
            </LinearLayout>

            <RelativeLayout
                    android:id="@+id/user_pswd_container"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:layout_centerInParent="true">

                <include
                        layout="@layout/layout_login_user_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
            </RelativeLayout>


        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>
